<%= form_for ContactMessage.new, url: contact_messages_url, html: { class: "w-full max-w-2xl mx-auto relative", data: { controller: "loader", action: "submit->loader#load" } }, remote: true do |f| %>
  <div class='w-full flex-wrap mb-6 flex'>
    <div class='w-full md:w-1/2 px-3 mb-6 md:mb-0'>
      <%= f.text_field :name, autofocus: false, class: 'rounded-md h-12 leading-10 py-0 px-4 text-sm bg-gray-100 b-0 align-middle transition-all ease-in-out duration-200 w-full focus:outline-none', placeholder: "Name *", required: true %>
    </div>

    <div class='w-full md:w-1/2 px-3'>
      <%= f.email_field :email, autofocus: false, class: 'rounded-md h-12 leading-10 py-0 px-4 text-sm bg-gray-100 b-0 align-middle transition-all ease-in-out duration-200 w-full focus:outline-none', placeholder: "Email *", required: true %>
    </div>
  </div>
    
  <div class="flex flex-wrap mb-6">
    <div class='w-full px-3'>
      <%= f.text_area :body, autofocus: false, class: 'rounded-md h-40 leading-normal w-full py-3 px-4 resize-y focus:outline-none text-sm bg-gray-100 b-0 align-middle transition-all ease-in-out duration-200', placeholder: "How can we help you? *", data: { target: 'textarea.textarea', action: 'keydown->textarea#resize keyup->textarea#resize blur->textarea#reset' }, required: true %>
    </div>
  </div>

  <div class="mt-12 px-3">
    <%= button_tag "Send", class: "bg-teal-900 text-teal-100 active:bg-teal-700 text-sm font-bold uppercase px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 transition-all ease-in-out duration-300 hover:bg-teal-100 hover:text-teal-900", data: { target: "loader.button" } %>
  </div>
<% end %>
