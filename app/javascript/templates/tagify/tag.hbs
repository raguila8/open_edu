<tag title="{{ ternary tagData.title tagData.title tagData.value }}" contenteditable='false' spellcheck='false' tabIndex="-1" class="{{ ternary tagData.class tagData.class ""}} tagify__tag inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium leading-5 bg-indigo-100 text-indigo-800 mx-1 focus:outline-none" {{{ attributes }}} data-controller='lazy-loader'>
  <div class="flex items-center space-x-3">
    <div class='flex-shrink h-6 w-6 rounded-full bg-gray-400 animate-pulse'>
		  <img data-target='lazy-loader.entry' data-image-src="{{ tagData.avatar }}" alt="" class="opacity-0 transition ease-in duration-150 h-full w-full rounded-full">
		</div>
    <!-- Selected: "font-semibold", Not Selected: "font-normal" -->
		<span class="font-normal block truncate">
			{{ tagData.name }}
		</span>
	</div>
  <x role='button' type='button' class="tagify__tag__removeBtn flex-shrink-0 -mr-0.5 ml-1.5 inline-flex text-indigo-500 focus:outline-none focus:text-indigo-700" aria-label='remove tag'>
    <svg class="h-2 w-2 pointer-events-none" stroke="currentColor" fill="none" viewBox="0 0 8 8">
      <path stroke-linecap="round" stroke-width="1.5" d="M1 1l6 6m0-6L1 7" />
    </svg>
  </x>
</tag>
